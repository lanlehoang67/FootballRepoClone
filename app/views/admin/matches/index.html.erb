<li>
  <input type="button" class="btn btn-primary" name="btnAdd" value="Add Match" onclick="window.location.href='<%= new_admin_match_url %>'" >
</li>
<div class="table-container">
   <table class="trestle-table">
      <thead>
        <tr>
          <th class="">
            <a class="sort" href="">
              <%= t "matches.index.id" %>
            </a>
          </th>
          <th class="">
            <a class="sort" href="">
              <%= t "matches.index.team1.name" %>
            </a>
          </th>
          <th class="">
            <a class="sort" href="">
              <%= t "matches.index.team2.name" %>
            </a>
          </th>
          <th class="">
            <a class="sort" href="">
              <%= t "matches.index.status" %>
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
         <%= will_paginate %>
         <%= render @matches %>
      </tbody>
   </table>
</div>
<style type="text/css">
   table {
   width: 100%;
   }
   th {
   height: 50px;
   }
</style>
