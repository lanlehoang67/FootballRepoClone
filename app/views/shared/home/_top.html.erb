<section id="top">
  <header>
    <div class="container">
      <div class="header-top">
        <div class="row">
          <div class="col-md-6">
            <div class="full">
              <div class="logo">
                <%= link_to image_tag("logo.png"), root_path %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="right_top_section">
              <!-- social icon -->
              <ul class="social-icons pull-left">
                <li><a class="facebook" href="#"><i class="fab fa-facebook-square"></i></a></li>
                <li><a class="twitter" href="#"><i class="fab fa-twitter"></i></a></li>
                <li><a class="youtube" href="#"><i class="fab fa-youtube"></i></a></li>
                <li><a class="pinterest" href="#"><i class="fab fa-pinterest-p"></i></a></li>
              </ul>
              <!-- end social icon -->
              <% if logged_in? %>
                <li><%= link_to t("layouts.header.users"), "#" %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t("layouts.header.account") %><b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("layouts.header.profile"), current_user %></li>
                    <li><%= link_to t("layouts.header.settings"), edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t("layouts.header.log_out"), logout_path,
                        method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <ul class="login">
                  <li class="login-modal">
                    <%= link_to login_path do %>
                      <i class="fa fa-user"></i>
                      <%= t "shared.home.top.login" %>
                    <% end %>
                  </li>
                  <li>
                    <div class="cart-option">
                      <%= link_to signup_path do %>
                        <i class="fa fa-shopping-cart"></i>
                        <%= t "shared.home.top.register" %>
                      <% end %>
                    </div>
                  </li>
                </ul>
              <% end %>
              <!-- button section -->
              <!-- end button section -->
            </div>
          </div>
        </div>
      </div>
      <div class="header-bottom">
        <div class="row">
          <div class="col-md-12">
            <div class="full">
              <div class="main-menu-section">
                <div class="menu">
                  <nav class="navbar navbar-inverse">
                    <div class="navbar-header">
                      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                      <span class="sr-only"><%= t "shared.home.top.toggle" %></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="#"><%= t "shared.home.top.menu" %></a>
                    </div>
                    <div class="collapse navbar-collapse js-navbar-collapse">
                      <ul class="nav navbar-nav">
                        <li>
                          <%= link_to root_path do %>
                            <%= t "shared.home.top.home" %>
                          <% end %>
                        </li>
                        <li><a href="about.html">
                          <%= t "shared.home.top.about" %>
                          </a>
                        </li>
                        <li><%= link_to t("shared.home.top.team"), teams_path %></li>
                        <li>
                          <a href="news.html"><%=
                            t "shared.home.top.news" %></a>
                        </li>
                        <li>
                          <%= link_to leagues_path do %>
                            <%= t "shared.home.top.rankings" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to matches_path do %>
                            <%= t "shared.home.top.match" %>
                          <% end %>
                        </li>
                      </ul>
                    </div>
                    <!-- /.nav-collapse -->
                  </nav>
                  <div class="search-bar">
                    <div id="imaginary_container">
                      <div class="input-group stylish-input-group">
                        <%= form_tag(teams_path, method: :get) do %>
                          <%= text_field_tag :search, params[:search],
                            placeholder: "Search teams,league by country" %>
                          <span class="input-group-addon">
                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</section>
